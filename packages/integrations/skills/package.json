{
  "name": "@astrojs/skills",
  "description": "Load and serve Agent Skills from your Astro site via well-known URIs",
  "version": "0.0.1",
  "type": "module",
  "types": "./dist/index.d.ts",
  "author": "withastro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/withastro/astro.git",
    "directory": "packages/integrations/skills"
  },
  "keywords": [
    "astro-integration",
    "agent-skills",
    "well-known",
    "ai",
    "agents"
  ],
  "bugs": "https://github.com/withastro/astro/issues",
  "homepage": "https://docs.astro.build/en/guides/integrations-guide/skills/",
  "exports": {
    ".": "./dist/index.js",
    "./routes/index-json": "./dist/routes/index-json.js",
    "./routes/skill-files": "./dist/routes/skill-files.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "astro-scripts build \"src/**/*.ts\" && tsc",
    "build:ci": "astro-scripts build \"src/**/*.ts\"",
    "dev": "astro-scripts dev \"src/**/*.ts\"",
    "test": "astro-scripts test \"test/**/*.test.js\""
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "p-limit": "^6.2.0",
    "picomatch": "^4.0.2",
    "tinyglobby": "^0.2.14"
  },
  "peerDependencies": {
    "astro": "^5.0.0"
  },
  "devDependencies": {
    "@types/picomatch": "^3.0.2",
    "astro": "workspace:*",
    "astro-scripts": "workspace:*"
  },
  "publishConfig": {
    "provenance": true
  }
}
