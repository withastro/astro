{
  "name": "@astrojs/node",
  "description": "Deploy your site to a Node.js server",
  "version": "10.0.0-beta.4",
  "type": "module",
  "types": "./dist/index.d.ts",
  "author": "withastro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/withastro/astro.git",
    "directory": "packages/integrations/node"
  },
  "keywords": [
    "withastro",
    "astro-adapter"
  ],
  "bugs": "https://github.com/withastro/astro/issues",
  "homepage": "https://docs.astro.build/en/guides/integrations-guide/node/",
  "exports": {
    ".": "./dist/index.js",
    "./server.js": "./dist/entrypoints/server.js",
    "./preview.js": "./dist/entrypoints/preview.js",
    "./node-handler": "./dist/entrypoints/node-handler.js",
    "./web-handler": "./dist/entrypoints/web-handler.js",
    "./utils": "./dist/entrypoints/utils.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "astro-scripts dev \"src/**/*.ts\"",
    "build": "astro-scripts build \"src/**/*.ts\" && tsc",
    "build:ci": "astro-scripts build \"src/**/*.ts\"",
    "test": "astro-scripts test \"test/**/*.test.js\""
  },
  "dependencies": {
    "@astrojs/internal-helpers": "workspace:*",
    "send": "^1.2.1",
    "server-destroy": "^1.0.1"
  },
  "peerDependencies": {
    "astro": "^6.0.0-alpha.0"
  },
  "devDependencies": {
    "@fastify/middie": "^9.1.0",
    "@fastify/static": "^9.0.0",
    "@types/node": "^22.10.6",
    "@types/send": "^1.2.1",
    "@types/server-destroy": "^1.0.4",
    "astro": "workspace:*",
    "astro-scripts": "workspace:*",
    "cheerio": "1.2.0",
    "devalue": "^5.6.2",
    "express": "^5.2.1",
    "fastify": "^5.7.4",
    "h3": "2.0.1-rc.14",
    "node-mocks-http": "^1.17.2"
  },
  "publishConfig": {
    "provenance": true
  }
}
