---
import { ClientRouter } from "astro:transitions";
---
<html>
<head>
	<ClientRouter />
	<title>Client router</title>
</head>
<body transition:animate="fade">
	<h1>Client router</h1>
	<a href="/client-router/second">Start transition natively</a><br>
	<button  id="navigate" >Start transition programmatically</button>
</body>

</html>


<script>
	import { navigate } from "astro:transitions/client";

	const button = document.getElementById("navigate");
	if (button) {
		button.onclick = () => {
			navigate("/client-router/second");
		};
	}
</script>
