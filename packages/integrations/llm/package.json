{
  "name": "@astrojs/llm",
  "description": "Optimize your Astro site for LLM consumption",
  "version": "0.1.0",
  "type": "module",
  "types": "./dist/index.d.ts",
  "author": "withastro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/withastro/astro.git",
    "directory": "packages/integrations/llm"
  },
  "keywords": [
    "astro-integration",
    "llm",
    "ai",
    "markdown"
  ],
  "bugs": "https://github.com/withastro/astro/issues",
  "homepage": "https://docs.astro.build/en/guides/integrations-guide/llm/",
  "exports": {
    ".": "./dist/index.js",
    "./middleware": "./dist/middleware.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "astro-scripts build \"src/**/*.ts\" && tsc",
    "build:ci": "astro-scripts build \"src/**/*.ts\"",
    "dev": "astro-scripts dev \"src/**/*.ts\"",
    "test": "astro-scripts test \"test/**/*.test.js\""
  },
  "dependencies": {
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "astro": "workspace:*",
    "astro-scripts": "workspace:*"
  },
  "publishConfig": {
    "provenance": true
  }
}
