{
  "name": "@astrojs/image",
  "description": "Load and transform images in your Astro site.",
  "version": "0.3.7",
  "type": "module",
  "types": "./dist/index.d.ts",
  "author": "withastro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/withastro/astro.git",
    "directory": "packages/integrations/image"
  },
  "keywords": [
    "astro-integration",
    "astro-component",
    "withastro",
    "image"
  ],
