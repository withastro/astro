    "preact-render-to-string": "^6.5.13",
    "vite": "^6.0.11"
  },
  "devDependencies": {
    "astro": "workspace:*",
    "astro-scripts": "workspace:*",
    "preact": "^10.25.4"
  },
  "peerDependencies": {
    "preact": "^10.6.5"
  },
  "engines": {
    "node": "^18.17.1 || ^20.3.0 || >=22.0.0"
