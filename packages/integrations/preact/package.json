    "@babel/plugin-transform-react-jsx": "^7.17.12",
    "babel-plugin-module-resolver": "^5.0.0",
    "preact-render-to-string": "^5.2.4",
    "@preact/signals": "^1.1.0"
  },
  "devDependencies": {
    "astro": "workspace:*",
    "astro-scripts": "workspace:*",
    "preact": "^10.7.3"
