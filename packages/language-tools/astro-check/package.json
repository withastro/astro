{
  "name": "@astrojs/check",
  "description": "Type checking and diagnostics for Astro projects",
  "version": "0.9.5",
  "author": "withastro",
  "license": "MIT",
  "homepage": "https://github.com/withastro/language-tools/tree/main/packages/astro-check",
  "repository": {
    "type": "git",
    "url": "https://github.com/withastro/astro.git",
    "directory": "packages/language-tools/astro-check"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "astro-check": "./bin/astro-check.js"
  },
  "files": [
    "bin",
    "dist/**/*.js",
