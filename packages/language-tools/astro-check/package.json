  "dependencies": {
    "@astrojs/language-server": "^2.15.0",
    "chokidar": "^4.0.1",
    "kleur": "^4.1.5",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "tinyglobby": "^0.2.15",
    "@types/yargs": "^17.0.33",
    "tsx": "^4.20.6",
    "astro-scripts": "workspace:*"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
