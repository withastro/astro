---
import PreactCounter from '../components/preact/PreactCounter.tsx';
import ReactCounter from '../components/react/ReactCounter.jsx';
import SolidCounter from '../components/solid/SolidCounter.tsx';
import SvelteCounter from '../components/svelte/SvelteCounter.svelte';
import VueCounter from '../components/vue/VueCounter.vue';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	</head>
	<body>
		<main>
			<ReactCounter id="react-counter" client:idle>
				<PreactCounter id="preact-counter" client:idle>
					<SolidCounter id="solid-counter" client:idle>
						<SvelteCounter id="svelte-counter" client:idle>
							<VueCounter id="vue-counter" client:idle />
						</SvelteCounter>
					</SolidCounter>
				</PreactCounter>
			</ReactCounter>
		</main>
	</body>
</html>
