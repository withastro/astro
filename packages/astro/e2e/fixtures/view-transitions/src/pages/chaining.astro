---
import Layout from "../components/Layout.astro"
---
<Layout>
	<h1 id="name">Chaining</h1>
	<a id="click" href="/one">click</a>
</Layout>

<script>
import { swap } from "../../node_modules/astro/dist/transitions/swap-functions";

	const t = "[test]"

	document.addEventListener('astro:before-swap', (e) => {
		const originalSwap = e.swap;
		e.swap = () => {
			console.info(t, "99");
			originalSwap();
			console.info(t, "00");
		}
	})

	document.addEventListener('astro:before-swap', (e) => {
		e.swap = () => {
			console.info(t, "3");
			swap(e.newDocument);
			console.info(t, "2");
		}
	})

	document.addEventListener('astro:before-swap', (e) => {
		const originalSwap = e.swap;
		e.swap = () => {
			console.info(t, "4");
			originalSwap();
			console.info(t, "1");
		}
	})

	document.addEventListener('astro:before-swap', (e) => {
		const originalSwap = e.swap;
		e.swap = () => {
			console.info(t, "5");
			originalSwap();
			console.info(t, "0");
		}
	})

</script>
