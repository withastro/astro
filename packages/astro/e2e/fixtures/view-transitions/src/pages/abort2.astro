---
import { ClientRouter, fade } from 'astro:transitions';
---
<html transition:animate="none">
	<head>
		<ClientRouter />
	</head>
	<body>
		<h1 transition:name="h1" transition:animate={fade({duration:500})}>Abort</h1>
	</body>
</html>

<style is:global>::view-transition-group(h1){animation:none}</style>
<script>
	import {navigate } from 'astro:transitions/client';

	setTimeout(()=>{
		// chop off the suffix ("In" / "Out") as we can't control the order of cancellations and do not want to depend on it. 
		[...document.getAnimations()].forEach((a) => a.addEventListener('cancel', (e) => console.log("[test]", e.type, (a as CSSAnimation).animationName.substring(0, 9)))); 
		console.log("[test] navigate to /one");
		navigate("/one");
	}, 200);
	console.log('[test] navigate to "."')
	navigate("/abort2");
</script>
