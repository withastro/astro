---
export const prerender = true;
import styles from '../styles.css?raw';
import SharedComponent from '../components/SharedComponent.astro';

const { searchParams } = Astro.url;
---

<html>
<head>
	<title>Static Page</title>
	<script>
		console.log('hello world');
	</script>
</head>
	<body>
		<h1 id="greeting">Hello world!</h1>
		<div id="searchparams">{searchParams.get('q')}</div>
		<div id="raw-styles">{styles}</div>
		<SharedComponent />
		<p class="prerender-only">Prerender only content</p>
	</body>
</html>

<style>
	/* Unique styles for prerendered page - causes different CSS bundle hash */
	.prerender-only {
		background: green;
	}
</style>
